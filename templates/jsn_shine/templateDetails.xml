<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>JSN_SHINE</name>
	<version>1.0</version>
	<author>JoomlaShine.com</author>
	<authorEmail>support@joomlashine.com</authorEmail>
	<authorUrl>http://www.joomlashine.com</authorUrl>
	<copyright>Copyright (c) 2008 - 2015 - JoomlaShine.com</copyright>
	<license>GNU/GPL v2 http://www.gnu.org/licenses/gpl-2.0.html</license>
	<group>jsntemplate</group>
	<identifiedName>tpl_shine</identifiedName>
	<description>TPL_JSN_SHINE_XML_DESCRIPTION</description>
	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>img</folder>
		<filename>component.php</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>template_thumbnail.png</filename>
		<filename>template_preview.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<positions>
		<position>logo</position>
		<position>mainmenu</position>
		<position>toolbar</position>
		<position>content-top</position>
		<position>left</position>
		<position>right</position>
		<position>breadcrumbs</position>
		<position>user-top</position>
		<position>user1</position>
		<position>user2</position>
		<position>mainbody-top</position>
		<position>mainbody-bottom</position>
		<position>user3</position>
		<position>user4</position>
		<position>user-bottom</position>
		<position>banner</position>
		<position>content-bottom</position>
		<position>user5</position>
		<position>user6</position>
		<position>user7</position>
		<position>footer</position>
		<position>bottom</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_jsn_shine.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_jsn_shine.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="jsn-settings" icon="icon-settings" label="JSN_TPL_PARAMS_SETTINGS">

				<field name="logoFile" class="" type="media" default="templates/jsn_shine/images/logo.png" label="JSN_TPL_LOGO_FILE" description="JSN_TPL_LOGO_FILE_DESC" />
				<field name="logoLink" type="text" label="JSN_TPL_LOGO_LINK" default="index.php" description="JSN_TPL_LOGO_LINK_DESC" />

				<field name="logoSlogan" type="text" label="JSN_TPL_LOGO_SLOGAN" description="JSN_TPL_LOGO_SLOGAN_DESC" />

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="JSN_TPL_GOOGLE_FONT_NAME"
					description="JSN_TPL_GOOGLE_FONT_NAME_DESC" />
				<!--field name="googleFontTag" type="textarea" rows="5" class="jsn-input-xlarge-fluid" label="JSN_TPL_GOOGLE_FONT_TAG" description="JSN_TPL_GOOGLE_FONT_TAG_DESC" /-->

				<field name="templateColor" type="list" default="blue" label="JSN_TPL_STYLE_TEMPLATE_COLOR" description="JSN_TPL_STYLE_TEMPLATE_COLOR_DESC">
					<option value="blue">JSN_TPL_COLOR_BLUE</option>
					<option value="red">JSN_TPL_COLOR_RED</option>
					<option value="green">JSN_TPL_COLOR_GREEN</option>
					<option value="violet">JSN_TPL_COLOR_VIOLET</option>
					<option value="orange">JSN_TPL_COLOR_ORANGE</option>
					<option value="grey">JSN_TPL_COLOR_GREY</option>
				</field>
				
				<field name="templateWidth" type="list" label="JSN_TPL_SECTION_OVERALL_WIDTH" description="JSN_TPL_SECTION_OVERALL_WIDTH">
					<option value="fixed">JSN_TPL_LAYOUT_FIXED</option>
					<option value="float">JSN_TPL_LAYOUT_FLOAT</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
